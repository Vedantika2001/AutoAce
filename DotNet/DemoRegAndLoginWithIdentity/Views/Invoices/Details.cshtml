<script>

    function redirectToRegistration() {

        var navbar = document.getElementById("navbar");
        if (navbar) {
            navbar.style.display = "none";
        }
        // Hide the link
        var downloadLink = document.getElementById("downloadLink");
        var downloadLink1 = document.getElementById("edit");
        var downloadLink2 = document.getElementById("back");

        downloadLink.style.display = "none";
        downloadLink1.style.display = "none";
        downloadLink2.style.display = "none";

        // Initiate PDF generation and download
        window.print();

        // After the print operation is complete, show the link again
        // You can add an event listener to the 'afterprint' event to handle this
        window.addEventListener("afterprint", function () {
            downloadLink.style.display = ""; // Revert to default display value
        });

    }
</script>
